#!/bin/bash

set -e

SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

clean() {
    ./gradlew clean
}

build() {
    ./gradlew build
}

run() {
    restart
}

status() {
    cd $SCRIPT_DIR/docker && vagrant status
}

start() {
    build
    run
}

restart() {
    cd $SCRIPT_DIR/docker && vagrant reload
}

stop() {
    cd $SCRIPT_DIR/docker && vagrant halt
    cd $SCRIPT_DIR && vagrant halt
}

destroy() {
    cd $SCRIPT_DIR/docker && vagrant destroy
}

usage() {
    echo "Usage: $0 [ clean | build | run | status | start | restart | stop | destroy ]"
}

if [[ $# == 0 ]]; then
    usage
    exit 1
fi

while [[ -n "$1" ]]; do
    case $1 in
        clean ) clean
            ;;
        build ) build
            ;;
        run ) run
            ;;
        status ) status
            ;;
        start ) start
            ;;
        restart ) restart
            ;;
        stop ) stop
            ;;
        destroy ) destroy
            ;;
        * ) usage
            exit 1
            ;;
    esac
    shift
done
